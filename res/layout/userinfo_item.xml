<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@id/profile_userinfo"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <vn.getgreen.view.GTextView
                android:id="@id/userinfo_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:maxWidth="200.0dip"
                android:padding="6.0dip"
                android:textAppearance="?quoord_14_Gray_textStyle"
                android:textStyle="bold" />

            <vn.getgreen.view.GTextView
                android:id="@id/userinfo_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/userinfo_item_value"
                android:gravity="center_vertical"
                android:padding="6.0dip"
                android:textAppearance="?quoord_14_Gray_textStyle" />
        </RelativeLayout>
    </RelativeLayout>

    <vn.getgreen.view.GImageView
        android:id="@id/profiles_diver"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_alignLeft="@id/profile_userinfo"
        android:layout_alignRight="@id/profile_userinfo"
        android:layout_below="@id/profile_userinfo"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="1.0dip" />

</RelativeLayout>