<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@id/advance_search_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip" >

        <ImageView
            android:id="@id/search_history_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.0dip"
            android:src="@drawable/advance_history" />

        <RelativeLayout
            android:id="@id/search_selecter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="13.0dip"
            android:layout_toRightOf="@id/search_history_icon" >

            <TextView
                android:id="@id/search_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textAppearance="?quoord_16_textStyle" />

            <TextView
                android:id="@id/search_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_keyword"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="1.0dip"
                android:textColor="@color/forum_title_color"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/search_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_choice"
                android:layout_marginTop="1.0dip"
                android:textColor="@color/forum_title_color"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/advance_search_diver"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_alignLeft="@id/advance_search_history"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/advance_search_history"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="1.0dip" />

</RelativeLayout>