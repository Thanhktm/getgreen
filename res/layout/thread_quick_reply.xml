<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/quick_lay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical" >

    <vn.getgreen.view.GImageView
        android:id="@id/show_all"
        android:layout_width="48.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:src="@drawable/menu_expand_dark" />

    <vn.getgreen.view.GEditText
        android:id="@id/quickqeply"
        android:layout_width="0.0px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_weight="1.0"
        android:hint="@string/quick_reply"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="3"
        android:minHeight="47.0dip"
        android:textColorHint="@color/quick_bar_hint"
        android:textSize="16.0sp" />

    <RelativeLayout
        android:id="@id/tools"
        android:layout_width="48.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dip" >

        <vn.getgreen.view.GImageView
            android:id="@id/reply"
            android:layout_width="48.0dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/menu_send_dark" />

        <ProgressBar
            android:id="@id/loading"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>