<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@id/regist_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="35.0dip" >

        <EditText
            android:id="@id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:textSize="16.0sp" />

        <EditText
            android:id="@id/tapatalk_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:hint="@string/email"
            android:inputType="text"
            android:textSize="16.0sp" />

        <EditText
            android:id="@id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="16.0sp" />

        <EditText
            android:id="@id/confirm_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:hint="@string/confirm_password"
            android:imeOptions="actionDone|flagNoEnterAction"
            android:inputType="textPassword"
            android:textSize="16.0sp" />

        <vn.getgreen.view.GButton
            android:id="@id/register_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/register_button"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/all_white"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tapa_id_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/account_register_message" />
    </LinearLayout>

</ScrollView>