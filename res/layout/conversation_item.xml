<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/conversation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="18.0dip" >

        <vn.getgreen.view.GImageView
            android:id="@id/conversation_authoricon"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:background="@drawable/default_avatar_dark"
            android:focusable="false"
            android:gravity="left|center" />

        <vn.getgreen.view.GImageView
            android:id="@id/avater_bg"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_alignRight="@id/conversation_authoricon"
            android:layout_alignTop="@id/conversation_authoricon"
            android:background="@drawable/avator_background" />

        <LinearLayout
            android:id="@id/conversation_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_toRightOf="@id/conversation_authoricon"
            android:background="@drawable/conversation_white_bg_dark"
            android:orientation="vertical" >

            <vn.getgreen.view.GTextView
                android:id="@id/conversation_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="8.0dip"
                android:includeFontPadding="false"
                android:minWidth="130.0dip"
                android:singleLine="true"
                android:textAppearance="?quoord_author_large_textStyle" />

            <vn.getgreen.view.GTextView
                android:id="@id/conversation_shortcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="8.0dip"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:textColor="@color/all_white"
                android:textSize="14.0sp" />

            <vn.getgreen.view.GTextView
                android:id="@id/conversation_attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:orientation="vertical"
                android:textColor="@color/all_gray" />
        </LinearLayout>

        <vn.getgreen.view.GTimeStampView
            android:id="@id/senttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/conversation_info"
            android:layout_below="@id/conversation_info"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="2.0dip"
            android:textAppearance="?quoord_11_textStyle" />
    </RelativeLayout>

</LinearLayout>