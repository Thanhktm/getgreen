<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0sp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <vn.getgreen.view.GImageView
            android:id="@id/fast_prev"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button_dark"
            android:scaleType="centerInside"
            android:src="@drawable/fast_back_common_dark" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/content_text_unread" />

        <vn.getgreen.view.GImageView
            android:id="@id/prev"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button_dark"
            android:scaleType="centerInside"
            android:src="@drawable/back_common_dark" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/content_text_unread" />

        <RelativeLayout
            android:id="@id/page_btn"
            android:layout_width="0.0px"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:layout_weight="3.0"
            android:background="@drawable/transparent_button_dark"
            android:clickable="true"
            android:gravity="center" >

            <vn.getgreen.view.GTextView
                android:id="@id/page_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:textColor="@color/dark_page_color"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <vn.getgreen.view.GImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/page_trangle" />
        </RelativeLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/content_text_unread" />

        <vn.getgreen.view.GImageView
            android:id="@id/next"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button_dark"
            android:scaleType="centerInside"
            android:src="@drawable/forward_common_dark" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/content_text_unread" />

        <vn.getgreen.view.GImageView
            android:id="@id/fast_next"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button_dark"
            android:scaleType="centerInside"
            android:src="@drawable/fast_forward_common_dark" />
    </LinearLayout>

    <vn.getgreen.view.GImageView
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:gravity="center_vertical"
        android:visibility="visible" />

</LinearLayout>