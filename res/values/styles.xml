<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Ligth_14_3bText" parent="@android:attr/textAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/content_text_unread</item>
    </style>
	<style name="Ligth_11_Text" parent="@android:attr/textAppearance">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/gray_898989</item>
    </style>
     <style name="Ligth_12_author_Text" parent="@android:attr/textAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/blue_5bb2d2</item>
    </style>
   	<style name="Ligth_16_Text" parent="@android:attr/textAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/content_text_unread</item>
    </style>
    <style name="Search_14_style" parent="@android:attr/textAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColorHint">@color/search_hint</item>
    </style>
    <style name="Ligth_14_author_Text" parent="@android:attr/textAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/blue_5bb2d2</item>
    </style>
     <style name="Ligth_14_Gray_Text" parent="@android:attr/textAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/gray_898989</item>
    </style>
    <style name="MyTheme.Widget.ListView" parent="@android:style/Widget.ListView">
    <item name="android:listSelector">@drawable/list_selector</item>
  </style>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:windowBackground">@color/dark_bg_color</item>
         <item name="quoord_11_textStyle">@style/Ligth_11_Text</item>
        <item name="quoord_author_12_textStyle">@style/Ligth_12_author_Text</item>
        <item name="quoord_16_textStyle">@style/Ligth_16_Text</item>
        <item name="android:editTextStyle">@style/MyTheme.Widget.EditText</item>
        <item name="android:actionBarWidgetTheme">@style/Search_14_style</item>
        <item name="quoord_author_large_textStyle">@style/Ligth_14_author_Text</item>
        <item name="android:listViewStyle">@style/MyTheme.Widget.ListView</item>
        <item name="quoord_14_Gray_textStyle">@style/Ligth_14_Gray_Text</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/green_action_bar</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/all_white</item>
    </style>
	<style name="MyTheme.Widget.EditText" parent="@android:style/Widget.EditText">
    <item name="android:textColor">@color/all_white</item>
    <item name="android:textCursorDrawable">@null</item>
	</style>
